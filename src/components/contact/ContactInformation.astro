---
import { ContactData } from "../../data/Contact";
import Phone from "../icons/contact/Phone.astro";
import Email from "../icons/contact/Email.astro";
import Address from "../icons/contact/Address.astro";
---

<div class="flex flex-col gap-4">
  {
    ContactData.map((data) => (
      <div class="flex gap-4 items-center">
        <div class="grid place-content-center p-4 rounded-md bg-container text-secondary">
          {data.title === "Phone" ? (
            <Phone />
          ) : data.title === "Email" ? (
            <Email />
          ) : (
            <Address />
          )}
        </div>

        <div>
          <h3 class="text-lg font-semibold text-primary">{data.title}</h3>
          <p
            class={`text-secondary ${data.title === "Phone" ? "w-full" : "lg:w-[90%]"}`}
          >
            {data.value}
          </p>
        </div>
      </div>
    ))
  }
</div>
