---
import Layout from "../layouts/Layout.astro";
import SocialLinks from "../components/SocialLinks.astro";

import DownloadIcon from "../components/icons/DownloadIcon.astro";
import Photo from "../components/main/Photo";
import Stats from "../components/main/Stats";
---

<Layout>
  <section class="w-full h-full select-none">
    <div
      class="flex flex-col-reverse xl:flex-row items-start justify-between xl:pt-4 xl:pb-24"
    >
      {/* Text */}
      <div class="xl:max-w-[50%] text-center xl:text-left">
        <span class="text-xl">Frontend Developer</span>
        <h1 class="text-5xl xl:text-[5rem] font-semibold mb-6">
          Hello I'm <br /><span class="text-secondary">Jeifer Leon</span>
        </h1>
        <p class="xl:w-[90%] mb-8 leading-7 text-primary-description">
          I&apos;m a Frontend Developer passionate about building elegant,
          efficient, and user-friendly digital experiences with a focus on
          usability and performance.
        </p>

        <div
          class="flex flex-col justify-center lg:grid grid-cols-[auto_63%] xl:justify-between"
        >
          <a
            href="https://drive.google.com/file/d/175aXU4fCoe3GZL5retiQa8vVKQxMnrzg/view?usp=sharing"
            target="_blank"
            rel="noopener noreferrer"
            class="w-3/5 mx-auto lg:w-auto flex items-center justify-center gap-3 px-5 py-3 border-2 border-secondary hover:border-secondary-hover hover:bg-secondary-hover hover:scale-105 duration-300 rounded-full text-secondary hover:text-background font-semibold"
            >Download CV <span><DownloadIcon /></span>
          </a>

          <div
            class="w-full flex items-center justify-center lg:justify-evenly gap-6 mt-5 lg:mt-0 mb-5 lg:mb-0"
          >
            <SocialLinks />
          </div>
        </div>
      </div>

      {/* Photo */}
      <div class="w-full h-full mb-5">
        <Photo client:only />
      </div>
    </div>
  </section>
  <Stats client:only />
</Layout>
